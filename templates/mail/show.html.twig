{% extends 'base.html.twig' %}

{% block title %}Mail{% endblock %}

{% block body %}
    <h1>Mail</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ mail.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ mail.name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ mail.email }}</td>
            </tr>
            <tr>
                <th>Subject</th>
                <td>{{ mail.subject }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ mail.message }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_mail_index') }}">back to list</a>

    <a href="{{ path('app_mail_edit', {'id': mail.id}) }}">edit</a>

    {{ include('mail/_delete_form.html.twig') }}
{% endblock %}
